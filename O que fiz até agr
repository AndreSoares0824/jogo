#introdução 
def inicio():
    global sanidade
    import time
    import os
    os.system('cls' if os.name == 'nt' else 'clear')  
    
    #Nome do jogo:
    print("""Within Four Walls""")
    input("Press ENTER para iniciar o PROLOGO")
    print()
    
    #Prologo:
    print("=== PROLOGO: A Casa ===")
    print()
    print("Em uma noite extremamente escura, numa floresta famosa "
    "\npor boatos sobre desaparecimente inesplicaveis," 
    "\num grupo de 5 adolecentes corasojo a desbrava, ate... ")
    time.sleep(2) 
    print("\nEncontrarem uma casa: ")
    print(" ")
    print('       .-------.')
    print('      /        \\')
    print('     /  /\\  /\\  \\')
    print('    /__/__\\/__\\__\\')
    print('    |  []   []   |')
    print('    |    ___     |')
    print('    |   |___|    |')
    print('    |   |___|    |')
    print('    |___|___|____|')
    print('     ///     \\\\\\')
    print(" ")
    time.sleep(1)
    print()
    es1()
     
def es1():
    global sanidade
    if sanidade <= 0:
        tela_morte2()    
    else:
        print("O grupo deve entrar na casa??(1,2 ou 3)")
        print("1 - O grupo entra na casa")
        print("2 - O grupo decide não arriscar e continua o caminho pela floresta(indisponivel)")
        print("3 - Exibir informações")
        escolha = input("Escolha: ")

        if escolha == "1":
            dentro_da_casa()
        elif escolha == "2":
            print("O grupo segue pela floresta... o som dos galhos os persegue na escuridão.")
        elif escolha == "3":
        
            mostrar_info(es1)
        else:
            print()
            print("Escolha inválida. O grupo hesita e começa a perder o controle mental.")
            print("O grupo perde 10 de sanidade.")
            sanidade -= 10
            es1()
