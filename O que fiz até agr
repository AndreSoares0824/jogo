    else:
        print()
        print("Qual caminho o grupo deverá seguir?? (1, 2, 3 ou 4):")
        print("1-Adentra na porta da esquerda")
        print("2-subir a escada(indisponivel)")
        print("3-Abrir a porta a direita")
        print("4- Exibir informações")
        escolha1 = input("Escolha:")
        if escolha1 == "1":
         salaretrato()
        elif escolha1 == "2":
            print()
        elif escolha1 == "3": 
            print()
            sanidade -=15
            dentro_da_casa1()
        elif escolha1 == "4":
            mostrar_info(es2)
        else:
            print()
            print("Escolha inválida. O grupo hesita e começa a perder o controle mental.")
            print("O grupo perde 10 de sanidade.")
            sanidade -= 10
            es2()
            
#Caso o jogador escolhar entrar na casa        
def dentro_da_casa():
    global sanidade
    sanidade_sistema()
    import time
    import os
    os.system('cls' if os.name == 'nt' else 'clear')    
    print()
    print("Ao entrarem, o grupo vê que está em uma imensa sala de estar,"
    "\nMas dado ao estado da casa parecer estar se decompondo e parece caindo aos pedaços.")
    time.sleep(1.5)
    print()
    print("Analisando a sala os adolecentes encontra varias porta com barricadas\n"
          "de madeira mas diferentes delas há 3 caminhos que não parecem barricados.")
    time.sleep(1.5)
    print()
    print("A esquerda, há uma porta velha sem um pedaço arrombada.")
    print("A frente da porta, há uma escada, com degraus faltando e alguns parecendo soltos.")
    print("A direita, há uma porta fechada.")
    print("""
     ______________________________________________________________
     |                            _______                         |
     |                           |  ↑↑↑  |                        |
     |                           |       |                        | 
     |                           |__|_|__|                        |
     |                             |||||                          |
     |                             |||||                          |
     |                             |||||                          | 
     |                                                            | 
    |  PORTA ←                    ESCADA ↑              → PORTA    |
     |____________________________________________________________|
    """) 
    time.sleep(1)
    print()
    print("Qual caminho o grupo deverá seguir?? (1, 2, 3 ou 4):")
    print("1-Adentra a porta da esquerda")
    print("2-subir a escada(indisponivel)")
    print("3-Abrir a porta a direita")
    print("4- Ebixir informações")
    escolha1 = input("Escolha:")
    if escolha1 == "1":
        salaretrato()
    elif escolha1 == "2":
        print()
    elif escolha1 == "3": 
        sanidade -= 15
        dentro_da_casa1()
    elif escolha1 == "4":
        mostrar_info(es2)
    else:
        print()
        print("Escolha inválida. O grupo hesita e começa a perder o controle mental.")
        print("O grupo perde 10 de sanidade.")
        sanidade -= 10
        es2()
