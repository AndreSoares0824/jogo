#O que faz o puzzle do ato 2 funcionar
import random
simbolos_possiveis = ["☀", "★", "✝", "☯", "☢", "⚙", "☘", "☠", "☾", "☽", "⚗", "♆", "♈", "♉", "♊"]
senha_simbolos = random.sample(simbolos_possiveis, 3)
senha_numeros = [random.randint(1, 9) for _ in range(3)]
senha_final = "".join(str(n) for n in senha_numeros)

#Tentar dnv o codigo se erra
def tentardnv():
    print()
    print("Simbolos especiais da senha em ordem:")
    print(senha_simbolos)
    tentativa = input("Digite o código de 3 números: ").strip()

    if tentativa == senha_final:
        print()
        print("\n No disposivo brilha uma luz verde dizendo CORRETO e a porta de ferro se abre lentamente...")
        print("Vocês atravessam para um corredor envolto em luz púrpura...")
        print()
        input("press ENTER para comecar o ATO")
        ato3()
    else:
        print()
        print("\nAs quadros ficam furiosos gritam fazendo seus ouvidos doerem — o código está errado!")
        print("O grupo perde 10 de sanidade")
        sanidade -= 10
        print(f"Sanidade restante: {sanidade}")
        if sanidade <= 0:
            tela_morte2()
        else:
            print()
            print("Os quadros se acalmam... talvez deva tentar de novo.")
            tentardnv()

#Minigame do Ato 2
def puzzle():
    global sanidade
    sanidade_sistema()
    import time
    encontrados = {}  
    tentativas = 0
    print()
    print("AVISO: ANTES DE COMEÇA O MINIGAME SERA LIMPADO O TEXTO A CIMA")
    input("press ENTER após ler o texto a cima")
    import os
    os.system('cls' if os.name == 'nt' else 'clear')
    #Simbolos do papel
    print("Simbolos especiais do papel misterioso em ordem:")
    print(senha_simbolos)
    print()
    input("press ENTER para começa o minigame")
    print()
    print("Você sente os olhos nos retratos te observando enquanto se aproxima da primeira estante...")
    time.sleep(0.8)
    print()
    while len(encontrados) < 3 and sanidade > 0:
        time.sleep(0.8)
        tentativas += 1
        estante_num = random.randint(1, 15)
        print(f"\n Estante {estante_num}")

        simbolos_estante = random.sample(simbolos_possiveis, 2)
        simbolo_enganador = random.choice(senha_simbolos)
        simbolos_estante.append(simbolo_enganador)
        random.shuffle(simbolos_estante)

        for i, simb in enumerate(simbolos_estante, 1):
            print(f"{i} - Livro com símbolo {simb}")

        escolha = input("Escolha um livro (1, 2 ou 3): ").strip()

        if escolha not in ["1", "2", "3"]:
            print("Você hesita e ouve sussurros... perdeu 5 de sanidade.")
            print("O grupo perde 5 de sanidade")
            sanidade -= 5
            continue

        escolhido = simbolos_estante[int(escolha) - 1]

        if escolhido in senha_simbolos:
       
            verdadeiro = random.choice([True, False])

            if verdadeiro and escolhido not in encontrados:
                numero = senha_numeros[senha_simbolos.index(escolhido)]
                encontrados[escolhido] = numero
                print(f" O símbolo {escolhido} brilha e revela o número {numero}.")
            elif escolhido in encontrados:
                print("O livro parecia familiar ao encontrado antes...mas o livro está vazio e se desfaz.")
                print("O grupo perde 5 de sanidade")
                sanidade -=5
                print(f"Sanidade atual: {sanidade}")
                
            else:
                print(f"O símbolo {escolhido} parece familiar... mas o livro está vazio e se defaz.")
                print("O grupo perde 5 de sanidade")
                sanidade -= 5
                print(f"Sanidade atual: {sanidade}")
        else:
            print(f"O livro com o símbolo {escolhido} se desfaz em cinzas!")
            print("O grupo perde 7 de sanidade")
            sanidade -= 7
            print(f"Sanidade atual: {sanidade}")

        if sanidade <= 0:
            print("\nA mente dos membros do grupo colapsa com as vozes da biblioteca...")
            tela_morte2()
            return

        print("\nSímbolos e números encontrados até agora:")
        if encontrados:
            for simb, num in encontrados.items():
                print(f"  {simb} → {num}")
        else:
            print("  Nenhum até o momento...")

    print("\n Você reuniu os três números!!!")
    print(" ".join([f"{simb}({num})" for simb, num in encontrados.items()]))
    print("\nO grupo retorna para o local da porta de ferro... Os adolecente se aproximam o disposivo, pedindo um código de 3 dígitos.")
    time.sleep(0.8)
    tentativa = input("Digite o código de 3 números: ").strip()

    if tentativa == senha_final:
        print("\n No disposivo brilha uma luz verde dizendo CORRETO e a porta de ferro se abre lentamente...")
        print("Vocês atravessam para um corredor envolto em luz púrpura...")
        print()
        input("press ENTER para comecar o ATO")
        ato3()
    else:
        print("\nAs quadros ficam furiosos gritam fazendo seus ouvidos doerem — o código está errado!")
        print("O grupo perde 10 de sanidade")
        sanidade -= 10
        print(f"Sanidade restante: {sanidade}")
        if sanidade <= 0:
            tela_morte2()
        else:
            print("Os quadros se acalmam... talvez deva tentar de novo.")
            tentardnv()

#caso o jogador tenha o Lampião e explore a biblioteca
def biblioteca():
    sanidade_sistema()
    import time
    print()
    print(""""
           __________________________________________________________________________
          |   _________________porta(vc) ↑  __________         |||||||        | | | |                                         
          |   _________________             __________         |||||||        | | | |                      
          |   _________________             __________         |||||||        | | | |                           
          |                                                    ‾ ‾ ‾ ‾|       | | | |
          |porta imensa de entrada <-                                 | porta de    |
          |                Area de leitura <- ########                | Ferro ->    |
          |   _________________       _ _     ########         _______|       | | | |                            
          |   _________________      | - |    ########         |||||||        | | | |                              
          |   _________________      |   |    ########         |||||||        | | | |                           
          |____________________________________________________|||||||________|_|_|_|
          """)
    print()
    print("Enquanto exploravam a biblioteca, o grupo caminhava em silêncio,"
      "\nouvindo apenas o som abafado de seus próprios passos.")
    time.sleep(1)
    print("As estantes eram altas e antigas, repletas de livros empoeirados e símbolos estranhos gravados nas lombadas.\n"
      "Retratos antigos e macabros observavam cada movimento, com olhos que pareciam seguir os adolescentes por todo o salão.")
    print()
    time.sleep(1.5)
    print ("Ao subirem a escadaria de madeira e avançarem pelos corredores,\n"
    "o ar ficou mais pesado e o cheiro de mofo tomou conta do ambiente.")
    time.sleep(1)
    print()
    print("Então, no fim do corredor, eles encontraram uma imensa porta de ferro,\n"
    "com um mecanismo de senha ao lado e um esqueleto caído junto a um papel amarelado.")
    time.sleep(1)
    print()
    input("Pressione ENTER para se aproximar do esqueleto...")
    print()
    print("O grupo se aproxima lentamente. O esqueleto segura um papel antigo e frágil.\n"
    "Um dos adolescentes o pega com cuidado e o desdobra, mas as letras quase se apagam...")
    print()
    time.sleep(1.5)
    print("Mesmo assim, dá pra ler algumas palavras e símbolos estranhos rabiscados no canto.\n")
    print()
    print("Você guardou o 'papel misterioso'. Ele agora pode ser visto em 'Exibir informações'.\n")
    pegar_ferramenta("Papel envelhecido (digite 'l' para ver o conteúdo)")
    print()
    time.sleep(1.5)
    print("Aviso:Você será forçadamente lavado para o inventario.")
    mostrar_info(puzzle)
    
#Caso o jogador descanse mais de uma vez antes de pegar o lampião
def es5():
    global sanidade
    if sanidade <= 0:
        print("Os adolecentes não conseguiram mais manter a sanidade " 
        "\ne começaram a lutar um contra os outros até sobra um unico," 
        "\nque não se sabe o que aconteceu com ele.")
        tela_morte2()
    else:
        print()
        print("O que grupo deve fazer??(1,2 ou 3)")
        print("1-Pegar a lampião sobre a mesa")
        print("2-Procurar uma saida")
        print("3-Exibir informações")
        escolha = input("Escolha:")
        if escolha == "1":
            print()
            print("Um dos integrantes pega lampião, conseguindo ter maior visibilidade do local.")
            pegar_ferramenta("lampião")
            es5_1()
        elif escolha == "2":
            print()
            print("Eles ficam andando encostados pela parade, mas pela escuridao e medo acabam voltando pro local base.")
            print("O grupo perde 10 de sanidade.")
            sanidade -= 10
            es5()
        elif escolha == "3":
            mostrar_info(es5)
        else:
            print()
            print("Escolha inválida. O grupo hesita e começa a perder o controle mental.")
            print("O grupo perde 10 de sanidade.")
            sanidade -= 10
        es5()


