#O basico né
sanidade = 100
obj = " "
obj1 = " "
obj2 = " "
integrantes = 5

#Faz o jogo resetar sempre que reiniciado
def resetar_jogo():
    global sanidade, integrantes, obj, obj1, obj2
    sanidade = 100
    integrantes = 5
    obj = " "
    obj1 = " "
    obj2 = " "
    inicio()

