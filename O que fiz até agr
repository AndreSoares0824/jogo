#Caso o jogador nn escolha nenhuma da opções        
def errobonus1():
    import time
    print("O que o grupo deve fazer??(1 ou 2)")
    print("1-Entrar no burraco")
    print("2-Não Entrar no burraco")
    escolha = input("escolha: ")
    if escolha == "1":
      ato3() #terminar de escrever quando eu começar o ato 3
    elif escolha == "2":
      print()
      print("O grupo não conseguiu ter corragem de entra no burrado " 
      "\ne burraco se regenera até voltar ao seu estado original")
      print()
      time.sleep(0.9)
      print("O grupo se volta para o comodo que estão.")
      es4()
    else:
        print()
        print("Escolha inválida. O grupo hesita e começa a perder o controle mental.")
        print("O grupo perde 20 de sanidade.")
        sanidade -= 20
        errobonus1()

