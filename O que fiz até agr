#Sistema de sanidade        
def sanidade_sistema():
    if sanidade <= 0:
        print("Os adolecentes não conseguiram mais manter a sanidade \ne começaram a lutar um contra os outros até sobra um unico,\nque não se sabe o que aconteceu com ele")
        tela_morte1()
    else:
        return
    
#perde vidas 2
def vidas():
    global integrantes
    integrantes -= 1
    if integrantes >= 1:
       return
    else:
      tela_morte1()
      return           

#perde vida
def integrante():
    global integrantes
    if integrantes >= 1:
        vidas()
        return
    else:
        print("Nâo há mais integrantes no grupo")
        tela_morte()
 
 #Pegar ferrramentas       
def pegar_ferramenta(nome):
    global obj, obj1, obj2
    if obj == " ":
        obj = nome
    elif obj1 == " ":
        obj1 = nome
    elif obj2 == " ":
        obj2 = nome
    else:
        print("Seu inventário está cheio!")
        return
    print(f"\nVocê pegou: {nome}")

#inventario
def mostrar_info(local_atual):
    global sanidade
    global obj
    global obj1
    global obj2
    print()
    print("=== Status do grupo ===")
    print("Integrantes:", integrantes)
    print("Sanidade:", sanidade)
    print("Ferramentas:")
    print("Ferramenta 1:", obj if obj != "" else "[vazio]")
    print("Ferramenta 2:", obj1 if obj1 != "" else "[vazio]")
    print("Ferramenta 3:", obj2 if obj2 != "" else "[vazio]")
    print()
    print("Escreva Exit ou press qualque botão para sair")
    escolha = input("\nO que deseja fazer? ").strip().lower()

    if escolha == "l" and obj == "Papel envelhecido (digite 'l' para ver o conteúdo)" or escolha == "l" and obj1 == "Papel envelhecido (digite 'l' para ver o conteúdo)" or escolha == "l" and obj2 == "Papel envelhecido (digite 'l' para ver o conteúdo)":  
        print()
        print("\n Papel envelhecido \n")
        print("""
        O mecanismo da porta de ferro brilha com senha escodido por runas antigas, 
        reliquias poderes estar em tais livros deste deposito.
        
        Cada um contendo uma runa gravado na sua lateral e um número gravado em suas páginas.
        Esses números formarão a senha para abrir a porta.
                
        Porém CUIDADO alguns livros invejoso exibem os mesmos símbolos corretos, mas estão vazios...
        """)
        print("Simbolos especiais da senha em ordem:")
        print(senha_simbolos)
        input("(Pressione ENTER para voltar)")

        local_atual()
    else:
        local_atual()

#Descate machado
def descarte_machado():
    global obj
    if obj == "machado":
        obj == " "
    
